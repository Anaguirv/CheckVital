---
// Contact information
const contactInfo = {
  instagram: 'https://www.instagram.com/check.vital/',
};  
---  

<!-- CTA Section with full-width background -->
<section class="border-b border-t border-gray-100 py-8 relative overflow-hidden">
  <!-- Full Width Background -->
  <div class="absolute inset-0 bg-gradient-to-r from-[#1BBFAF] to-[#3BD952]"></div>
  
  <!-- Animated Background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-40 h-40 bg-white rounded-full mix-blend-overlay animate-pulse"></div>
    <div class="absolute top-1/2 right-0 w-32 h-32 bg-white rounded-full mix-blend-overlay animate-ping" style="animation-delay: 2s; animation-duration: 4s;"></div>
    <div class="absolute bottom-0 left-1/3 w-24 h-24 bg-white rounded-full mix-blend-overlay animate-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <!-- Content Container -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

        <!-- Social Media -->
        <div class="flex flex-col items-center justify-center">
          <a 
            href={contactInfo.instagram}
            target="_blank"
            class="w-10 h-10 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full flex items-center justify-center transition-colors duration-300 group"
            aria-label="Síguenos en Instagram"
          >
            <svg 
              class="w-5 h-5 text-white group-hover:text-white" 
              fill="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
