---
import { getCollection } from 'astro:content';

const services = await getCollection('services');

// Contact information
const contactInfo = {
  phone: '+56 9 89827644',
  email: 'ebriceno@checkvital.cl',
  instagram: 'https://www.instagram.com/check.vital/',
  whatsapp: 'https://walink.co/cd5e01',
  address: 'alfalfares, La Serena, Chile'
};

// Navigation links
const infoLinks = [
  { label: 'Sobre Nosotros', href: '#' },
  { label: 'Nuestro Equipo', href: '#' },
  { label: 'Tecnología', href: '#' },
  { label: 'Resultados', href: '#' },
  { label: 'Contacto', href: '#' },
  { label: 'Ubicación', href: '#' }
];
---

<footer class="bg-white border-t border-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <section class="py-12">
      
      <!-- Wrapper general -->
      <div class="grid gap-12 md:grid-cols-3">

        <!-- Brand & Contact: ocupa una sola columna siempre -->
        <div>
          <!-- Logo + Nombre -->
          <div class="flex flex-col md:flex-row space-x-2 items-center md:items-start mb-6 space-y-2">
            <img src="/icono.png" alt="Check Vital Logo" class="w-10 h-10" />
            <h3 class="text-xl font-bold text-gray-900 mt-1">
              Check<span class="text-primary">Vital</span>
            </h3>
          </div>

          <!-- Descripción -->
          <p class="text-[#595959] text-center md:text-start mb-6 leading-relaxed">
            Tratamientos profesionales de belleza con tecnología avanzada y resultados clínicamente probados.
          </p>

          <!-- Contacto -->
          <div class="space-y-2">
            <!-- Teléfono -->
            <div class="flex items-center justify-center md:justify-start space-x-3">
              <svg class="w-4 h-4 text-[#1BBFAF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="text-[#595959] text-sm">{contactInfo.phone}</span>
            </div>

            <!-- Email -->
            <div class="flex items-center justify-center md:justify-start space-x-3">
              <svg class="w-4 h-4 text-[#1BBFAF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="text-[#595959] text-sm">{contactInfo.email}</span>
            </div>

            <!-- Dirección -->
            <div class="flex items-center justify-center md:justify-start space-x-3">
              <svg class="w-4 h-4 text-[#1BBFAF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 11.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M19.5 10.5c0 5-7.5 10.5-7.5 10.5S4.5 15.5 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              <span class="text-[#595959] text-sm">{contactInfo.address}</span>
            </div>
          </div>
        </div>

        <!-- Tratamientos + Información (solo se agrupan en mobile) -->
        <div class="grid grid-cols-2 gap-6 col-span-1 md:col-span-2">

          <!-- Tratamientos -->
          <div class="flex items-center justify-center">
            <div class="inline-block text-left">
              <h4 class="text-gray-900 font-semibold mb-6">Tratamientos</h4>
              <ul class="space-y-3">
                {services.map(({ slug, data }) => (
                  <li>
                    <a href={`/servicios/${slug}`} class="text-[#595959] hover:text-primary transition-colors duration-300 text-sm">
                      {data.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <!-- Información -->
          <div class="flex items-center justify-center">
            <div class="inline-block text-left">
              <h4 class="text-gray-900 font-semibold mb-6">Información</h4>
              <ul class="space-y-3">
                {infoLinks.map(({ label, href }) => (
                  <li>
                    <a
                      href={href}
                      class="text-[#595959] hover:text-[#1BBFAF] transition-colors duration-300 text-sm"
                    >
                      {label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>

        </div>

      </div>
    </section>
  </div>
</footer>


