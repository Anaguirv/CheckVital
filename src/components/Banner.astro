<!-- CTA Section with full-width background -->
<section class="border-b border-t border-gray-100 py-8 relative overflow-hidden">
  <!-- Full Width Background -->
  <div class="absolute inset-0 bg-gradient-to-r from-[#1BBFAF] to-[#3BD952]"></div>
  
  <!-- Animated Background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-40 h-40 bg-white rounded-full mix-blend-overlay animate-pulse"></div>
    <div class="absolute top-1/2 right-0 w-32 h-32 bg-white rounded-full mix-blend-overlay animate-ping" style="animation-delay: 2s; animation-duration: 4s;"></div>
    <div class="absolute bottom-0 left-1/3 w-24 h-24 bg-white rounded-full mix-blend-overlay animate-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <!-- Content Container -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between text-center md:text-left space-y-4 md:space-y-0">
      
      <!-- CTA Content -->
      <div class="w-full md:w-auto">
        <h4 class="text-white text-2xl font-semibold mb-2">
          Tu bienestar estético comienza aquí
        </h4>
        <p class="text-white/90 text-m">
          Solicita tu evaluación gratuita y déjanos acompañarte en este proceso de cambio.
        </p>
      </div>
      
      <!-- CTA Button -->
      <div class="flex justify-center md:justify-end w-full md:w-auto space-x-3">
        <a 
          href="#"
          id="banner-wsp"
          data-numero="56989827644"
          data-msg="Hola! Quiero agendar una consulta con CheckVital"
          class="cursor-pointer px-6 py-3 bg-white text-[#1BBFAF] font-medium rounded-lg hover:bg-white/90 hover:shadow-lg transition-all duration-300"
          aria-label="Agendar consulta por WhatsApp"
        >
          Agendar Consulta
        </a>
      </div>
    </div>
  </div>
</section>

	
	<!-- boton banner -->
	<script is:inline>
		const bannerBtn = document.getElementById("banner-wsp");

		if (bannerBtn && bannerBtn.dataset.bound !== "true") {
		bannerBtn.dataset.bound = "true";

		bannerBtn.addEventListener("click", (e) => {
			e.preventDefault();

			const numero = bannerBtn.getAttribute("data-numero");
			const msg = encodeURIComponent(bannerBtn.getAttribute("data-msg") || "");

			const isMobile = /Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
			const url = isMobile
			? `https://wa.me/${numero}?text=${msg}`
			: `https://web.whatsapp.com/send?phone=${numero}&text=${msg}`;

			if (typeof gtag === "function") {
			gtag("event", "click_whatsapp_banner", {
				event_category: "conversion",
				event_label: decodeURIComponent(msg),
			});
			}

			window.open(url, "_blank");
		});
		}

	</script>